@model XperiCode.PluploadMvc.Sample.Models.SampleForm1Model

@{
    ViewBag.Title = "Sample form 1";
}

@using (Html.BeginForm("SubmitForm1", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3>Sample form 1</h3>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Text, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Text, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UploadReference1, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="plupload-control" data-plupload-url="@Url.Content("~/Plupload.axd?reference=" + Model.UploadReference1)">
                @Html.HiddenFor(m => m.UploadReference1)
                <div class="form-control pull-left plupload-filelist">
                </div>
                <div class="pull-left">
                    <input type="button" class="btn btn-default plupload-select" value="Select" />
                </div>
                @Html.ValidationMessageFor(m => m.UploadReference1, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UploadReference2, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="plupload-control" data-plupload-url="@Url.Content("~/Plupload.axd?reference=" + Model.UploadReference2)">
                @Html.HiddenFor(m => m.UploadReference2)
                <div class="form-control pull-left plupload-filelist">
                </div>
                <div class="pull-left">
                    <input type="button" class="btn btn-default plupload-select" value="Select" />
                </div>
                @Html.ValidationMessageFor(m => m.UploadReference2, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
}
